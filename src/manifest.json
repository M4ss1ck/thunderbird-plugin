{
    "manifest_version": 2,
    "version": "0.1.1",
    "author": "Massick",
    "name": "Daily Reports",
    "description": "Add To, CC and Subject",
    "browser_specific_settings": {
        "gecko": {
            "id": "daily.report@massick.dev"
        }
    },
    "permissions": [
        "compose",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "compose_action": {
        "default_title": "Daily Reports"
    },
    "icons": {
        "16": "icon.svg",
        "32": "icon.svg",
        "64": "icon.svg"
    },
    "web_accessible_resources": [
        "index.html",
        "index.js"
    ]
}
