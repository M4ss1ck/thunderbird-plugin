{
  "manifest_version": 2,
  "version": "0.0.3",
  "author": "Massick",
  "name": "Daily Report",
  "description": "Add To, CC and Subject",
  "browser_specific_settings": {
    "gecko": {
      "id": "massick.daily.report@sample.extensions.thunderbird.net"
    }
  },
  "permissions": ["compose", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "compose_action": {
    "default_title": "Add Details"
  },
  "web_accessible_resources": ["preferences.html", "preferences.js"]
}
